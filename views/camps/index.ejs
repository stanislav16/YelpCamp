<% layout("layouts/boilerplate") %>
<link rel="stylesheet" href="/css/maps.css" />
<div id="clusterMap" class="mb-5"></div>
<% for(let camp of camps){ %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if(camp.images.length){ %>
      <img
        crossorigin="anonymous"
        class="img-fluid"
        src="<%=camp.images[0].url  %>"
      />

      <% }else{ %>
      <img crossorigin="anonymous" class="img-fluid" src="" />

      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%=camp.title %></h5>
        <p class="card-text"><%= camp.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= camp.location %></small>
        </p>
        <a href="/campgrounds/<%= camp._id %>" class="btn btn-dark">SHOW</a>
      </div>
    </div>
  </div>
</div>

<% } %>

<script>
  const mapToken = "<%= process.env.MAPBOX_TOKEN %>";
  const campgrounds = { features: <%- JSON.stringify(camps) %> };
</script>
<script src="/js/clusterMap.js"></script>
