<% layout("layouts/boilerplate") %>
<div class="row">
  <div class="col-6">
    <div class="card mb-5">
      <img src="<%= camp.image %>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%=camp.title %></h5>
        <p class="card-text"><%=camp.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= camp.location %></li>
        <li class="list-group-item">
          Submitted by <%= camp.author.username %>
        </li>
        <li class="list-group-item">$<%= camp.price %>/night</li>
      </ul>
      <% if(currentUser && camp.author.equals(currentUser)){ %>
      <div class="card-body">
        <a
          href="/campgrounds/<%=camp._id  %>/edit"
          class="card-link btn btn-dark"
          >Edit</a
        >
        <form
          action="/campgrounds/<%=camp._id  %>?_method=DELETE"
          method="post"
          class="card-body d-inline"
        >
          <button class="card-link btn btn-dark">Delete</button>
        </form>
      </div>
      <%} %>
    </div>
  </div>
  <div class="col-6">
    <h2>Leave a Review</h2>
    <form
      action="/campgrounds/<%=camp._id%>/reviews"
      method="post"
      novalidate
      class="mb-3 needs-validation"
    >
      <div class="mb-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          class="form-range"
          id="rating"
          type="range"
          min="1"
          max="5"
          name="review[rating]"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review </label>
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          cols="30"
          rows="3"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button class="btn btn-dark">Submit</button>
    </form>
    <% for(let review of camp.reviews){ %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">Rating: <%=review.rating %></h5>
        <p class="card-text">Review: <%=review.body %></p>
        <form
          action="/campgrounds/<%= camp._id %>/reviews/<%= review._id %>?_method=delete"
          method="post"
        >
          <button class="btn btn-dark">Delete</button>
        </form>
      </div>
    </div>
    <%} %>
  </div>
</div>
